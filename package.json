{
  "name": "weather-api",
  "version": "1.0.0",
  "description": "REST Api to fetch weather informations",
  "author": "Karol Stawowski",
  "license": "MIT",
  "scripts": {
    "start": "ts-node ./src/app.ts",
    "watch": "nodemon -e ts -w . -x npm run watch:serve",
    "watch:serve": "ts-node --files ./src/app.ts --inspect",
    "test": "jest",
    "update": "updates --update --minor && npm install",
    "postupdate": "git diff-files --quiet package-lock.json || npm test",
    "tslint": "tslint --project tsconfig.json",
    "tslint:fix": "tslint --project tsconfig.json --fix"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "body-parser": "1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "4.17.1",
    "helmet": "^3.23.3",
    "inversify": "5.0.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.3.2",
    "inversify-logger-middleware": "3.1.0",
    "mongodb": "3.5.9",
    "morgan": "1.10.0",
    "pg": "8.2.1",
    "reflect-metadata": "0.1.13",
    "tslint": "^6.1.2",
    "typeorm": "0.2.25"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.32",
    "@types/body-parser": "1.19.0",
    "@types/chai": "4.2.11",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.6",
    "@types/helmet": "0.0.47",
    "@types/jest": "^26.0.3",
    "@types/mocha": "7.0.2",
    "@types/mongodb": "3.5.25",
    "@types/morgan": "1.9.1",
    "@types/node": "^14.0.19",
    "@types/reflect-metadata": "^0.1.0",
    "chai": "4.2.0",
    "jest": "^26.1.0",
    "jest-mock-axios": "^4.2.0",
    "mocha": "8.0.1",
    "nyc": "15.1.0",
    "ts-jest": "^26.1.1",
    "ts-node": "8.10.2",
    "tslint-config-semistandard": "^8.0.1",
    "typescript": "3.9.6",
    "updates": "^10.2.15"
  },
  "nyc": {
    "exclude": [
      "**/*.spec.ts"
    ]
  }
}
